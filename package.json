{
	"name": "@lesjoursfr/agenda",
	"version": "2.0.3",
	"description": "Light weight job scheduler for Node.js",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lesjoursfr/agenda.git"
	},
	"homepage": "https://github.com/lesjoursfr/agenda#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/agenda/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "22.x || 24.x"
	},
	"keywords": [
		"job",
		"jobs",
		"cron",
		"delayed",
		"scheduler",
		"runner"
	],
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"check-lint": "eslint",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"build": "tsc -p tsconfig.build.json",
		"test": "mocha",
		"typedoc": "typedoc src/index.ts --out ./docs && prettier --write ./docs --ignore-path .gitignore"
	},
	"dependencies": {
		"@lesjoursfr/date": "^2.0.2",
		"@lesjoursfr/human-interval": "^2.0.2",
		"cron-parser": "^5.4.0",
		"debug": "^4.4.3",
		"luxon": "^3.7.2",
		"mongodb": "~7.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@tsconfig/node22": "^22.0.5",
		"@types/debug": "^4.1.12",
		"@types/luxon": "^3.7.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.4",
		"@types/sinon": "^21.0.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^17.0.0",
		"mocha": "^11.7.5",
		"mongodb-memory-server": "^11.0.1",
		"prettier": "^3.7.4",
		"sinon": "^21.0.1",
		"ts-node": "^10.9.2",
		"typedoc": "^0.28.15",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0"
	},
	"dependenciesMeta": {
		"mongodb-memory-server": {
			"built": true
		}
	},
	"packageManager": "yarn@4.12.0"
}
